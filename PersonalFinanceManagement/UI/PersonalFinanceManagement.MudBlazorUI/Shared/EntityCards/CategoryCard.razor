
<MudCard Outlined="true" Class="@BorderColor" >
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" />
        </CardHeaderActions>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public string Name { get; set; } = "Test Wallet Name (50 chars include) test test-test" /* string.Empty */;
    [Parameter]
    public bool IsIncome { get; set; }
    [Parameter]
    public int WalletId { get; set; }

    string BackgroundColor => IsIncome ? ($"background:{Colors.Green.Default};") : ($"background:{Colors.Red.Darken1};"); //Style="@BackgroundColor"
    string BorderColor => IsIncome ? $"border-solid border-4 mud-border-success pa-0"
                                   : $"border-solid border-4 mud-border-error pa-0";

    public void Edit()
    {
        
    }
}
