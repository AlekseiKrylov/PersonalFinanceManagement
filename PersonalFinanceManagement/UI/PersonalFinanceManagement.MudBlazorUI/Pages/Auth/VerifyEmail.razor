@page "/verify"
@inherits VerifyEmailViewModel

<MudGrid>
    <MudItem xs="12">
        <MudCard>
            <MudForm @ref="_form" @bind-IsValid="@_success">
                <MudCardContent>
                    <MudTextField T="string" @bind-Value="_emailVerificationCode" Label="Enter the verification code" 
                                  Required="true" RequiredError="Verification code is required!" OnlyValidateIfDirty="false" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!_success)" Class="ml-auto" OnClick="EmailVerificationAsync">Verify</MudButton>
                </MudCardActions>
            </MudForm>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudButton Variant="Variant.Filled" Href="/login">Login</MudButton>
    </MudItem>
</MudGrid>

@code {
    bool _success;
    MudForm _form;
}