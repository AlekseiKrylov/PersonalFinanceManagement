@page "/forgot"
@using System.ComponentModel.DataAnnotations;
@inherits ForgotPasswordViewModel

<MudGrid>
    <MudItem xs="12" sm="7">
        <MudCard>
            <MudForm @ref="_form" @bind-IsValid="@_success">
                <MudCardContent>
                    <MudTextField T="string" @bind-Value="_userEmail" Label="Email"
                                  Required="true" RequiredError="Email is required!" OnlyValidateIfDirty="false"
                                  Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!_success)" Class="ml-auto" OnClick="ForgotPasswordAsync">Submit</MudButton>
                </MudCardActions>
            </MudForm>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudButton Variant="Variant.Filled" Href="/reset">Reset password</MudButton>
    </MudItem>
</MudGrid>

@code {
    bool _success;
    MudForm _form;
}